<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.springrts.tandroid" android:versionCode="1"
	android:versionName="1.0.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:name="TAndroid">

		<activity android:name=".ui.FriendsList">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>

	<activity android:name=".ui.Options"></activity>
	<service android:name=".service.LobbyService"></service>
</application>

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk android:targetSdkVersion="7" android:minSdkVersion="7"
		android:maxSdkVersion="7"></uses-sdk>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>

</manifest> 